@model HazyTouchWebsite.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

<h1 class="page-intro-text">Contact</h1>

<section class="form-container">
    <p class="form-text">
        If you'd like to schedule an appointment or ask a question, feel free
        to fill out use the form below.&nbsp;&nbsp;Looking forward to hearing from you!
    </p>
    <form method="post" class="contact-form">
        <input type="text" class="form-control" placeholder="Name" required>
        <input type="text" class="form-control" placeholder="Email" required>
        <input type="text" class="form-control" placeholder="Subject" required>
        <textarea rows="3" type="text" class="area-control" placeholder="Your message goes here" required></textarea>
        <button type="submit" class="submit-button">Send</button>
    </form>
</section>

